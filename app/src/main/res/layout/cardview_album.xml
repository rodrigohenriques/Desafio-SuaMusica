<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageview_album_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/cd_cover" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/grid_text_background"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textview_album_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marcia Felipe"
            android:textSize="16sp"
            android:textColor="@color/grid_text"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textview_album_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CD de VerÃ£o"
            android:textColor="@color/grid_text"
            android:textSize="12sp"
            android:layout_below="@+id/textview_album_author"/>
    </RelativeLayout>

</FrameLayout>